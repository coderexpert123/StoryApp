<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:padding="3dp"
        tools:context=".dashboard">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="104dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:onClick="home"

                    android:background="#8000ff"

                    android:src="@drawable/ic_home_black_24dp">

                </ImageView>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_height="67dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"

                    android:background="#8000ff"
                    android:src="@drawable/ic_call_black_24dp">

                </ImageView>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_height="67dp">

                <ImageView
                    android:layout_width="98dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:onClick="sharenow"
                    android:id="@+id/shareit"
                    android:background="#8000ff"
                    android:src="@drawable/ic_share_black_24dp">

                </ImageView>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="2dp"
                android:layout_height="67dp">

                <ImageView
                    android:layout_width="99dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#8000ff"
                    android:onClick="setting"
                    android:src="@drawable/ic_settings_black_24dp">
                </ImageView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <androidx.appcompat.widget.SearchView
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="#ffffff"
                app:queryHint="Search Here">

            </androidx.appcompat.widget.SearchView>
        </androidx.cardview.widget.CardView>

        <com.synnapps.carouselview.CarouselView
            android:id="@+id/carouselView"
            android:layout_width="match_parent"
            android:layout_height="244dp"
            app:fillColor="#FFFFFFFF"
            app:pageColor="#00000000"
            app:radius="6dp"
            app:slideInterval="3000"
            app:strokeColor="#FF777777"
            app:strokeWidth="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:textColor="#fff"
            android:gravity="center"
            android:fontFamily="@font/sweetpurple"
            android:layout_marginTop="3dp"
            android:background="#F881BD"
            android:textStyle="bold"
            android:textSize="43dp"

            android:text="Our  Delicious Items "/>

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:padding="5dp"
            android:layout_marginTop="23dp"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:onClick="recipeeapp"
                android:layout_marginRight="7dp"
                android:layout_height="168dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView"
                   />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:onClick="momos"
                android:layout_marginLeft="7dp"
                android:layout_height="168dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/ime"

                 />

            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:padding="5dp"
            android:layout_height="37dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="IceCream"
                android:gravity="center"
                android:textColor="#800000"
                android:textSize="20dp"
                android:layout_marginRight="7dp"
                android:layout_height="match_parent">

            </TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Momos"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#800000"
                android:gravity="center"
                android:layout_marginLeft="7dp"
                android:layout_height="match_parent">

            </TextView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:padding="5dp"
            android:layout_marginTop="23dp"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:onClick="buttershakwd"
                android:layout_marginRight="7dp"
                android:layout_height="168dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/imf"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:onClick="choclate"
                android:layout_marginLeft="7dp"
                android:layout_height="168dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/img"

                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:padding="5dp"
            android:layout_height="37dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="ButterShake"
                android:gravity="center"
                android:textColor="#800000"
                android:textSize="20dp"
                android:layout_marginRight="7dp"
                android:layout_height="match_parent">

            </TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="Chocolate"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#800000"
                android:gravity="center"
                android:layout_marginLeft="7dp"
                android:layout_height="match_parent">

            </TextView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="#ffad5b"
                android:gravity="center"
                android:text="Powered By : @dheeraj "
                android:textColor="#fff"
                android:textSize="17dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>